<div class="alljob  ">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <span class="show-image">
        <%= image_tag(@job.companylogo_url) if @job.companylogo? %>
        </span>
         <%= link_to @job.title , @job  %>

      </div>
      <div class="col-md-9">

  <strong>Title:</strong>
  <%= @job.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @job.description %>
</p>
  <td><%= @job.created_at.strftime('%b %d, %Y')  %></td>
<p>


  <% if @job.urgent and @job.urgent %>
     <div class="background-color-red badge badge-danger">

         <%= form_with(model: @job, local: true) do |form| %>
         <div class="field">
           <%= form.label :urgent %>
         </div>
         <% end %>
        </div>
        <% elsif @job.urgent  %>
        <div class="background-color-blue">
         <span class="badge "><%= @job.urgent   %></span>
        </div>
    <% end %>
</p>
<p>
  <strong>Job type:</strong>

</p>
  <%= @job.jobcity  %>

<%= link_to 'Edit', edit_job_path(@job) %> |
<%= link_to 'Destroy', @job, method: :delete, data: { confirm: 'Are you sure?' } %> |

<%= link_to 'Back', jobs_path %>

<br>
<%= link_to "Apply on this Job", root_path, class: "btn btn-lg btn-primary" %>
<br>

</div>
</div>
</div>
